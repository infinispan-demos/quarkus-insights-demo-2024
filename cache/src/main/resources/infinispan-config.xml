<infinispan>
    <cache-container>
        <distributed-cache name="mycache"></distributed-cache>
        <distributed-cache name="one-cache" owners="2" mode="SYNC" statistics="true">
            <backups>
                <backup site="NYC" strategy="ASYNC"/>
            </backups>
            <encoding media-type="application/x-protostream"/>
            <memory max-size="3MB" when-full="REMOVE"/>
            <security>
                <authorization enabled="true" roles="admin monitor deployer"/>
            </security>
        </distributed-cache>
    </cache-container>
</infinispan>